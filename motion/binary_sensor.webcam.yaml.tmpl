###
### motion_${MOTION_CAMERA} BINARY_SENSOR
###

- platform: template
  sensors:
    motion_end_${MOTION_CAMERA}:
      entity_id:
        - sensor.motion_event_end_${MOTION_CAMERA}
      value_template: >
        {% if states.sensor.motion_event_end_${MOTION_CAMERA} != none %}
          {{ states.sensor.motion_event_end_${MOTION_CAMERA}.state|lower == 'true' }}
        {% else %}null{% endif %}

- platform: template
  sensors:
    motion_annotated_${MOTION_CAMERA}:
      entity_id:
        - sensor.motion_event_annotated_${MOTION_CAMERA}
      value_template: >
        {% if states.sensor.motion_event_annotated_${MOTION_CAMERA} != none %}
          {{ states.sensor.motion_event_annotated_${MOTION_CAMERA}.state|lower == 'true' }}
        {% else %}null{% endif %}

- platform: template
  sensors:
    motion_detected_${MOTION_CAMERA}:
      entity_id:
        - sensor.motion_event_annotated_${MOTION_CAMERA}
      value_template: >
        {{ state_attr('sensor.motion_event_annotated_${MOTION_CAMERA}','count')|int > 0 }}

- platform: template
  sensors:
    motion_detected_entity_${MOTION_CAMERA}:
      entity_id:
        - sensor.motion_annotated_entity_count_${MOTION_CAMERA}
      value_template: >-
        {{ states('sensor.motion_annotated_entity_count_${MOTION_CAMERA}')|int > 0 }}

##

- platform: template
  sensors:
    motion_complete_${MOTION_CAMERA}:
      entity_id:
        - sensor.motion_complete_${MOTION_CAMERA}
      value_template: >
        {% set d = states('sensor.motion_complete_${MOTION_CAMERA}')|int %}
        {{ d > 0 and d < states('input_number.motion_complete')|int }}
