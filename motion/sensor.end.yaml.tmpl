###
## motion/sensor.end.yaml.tmpl
###

- platform: mqtt
  name: motion_event_end
  qos: 2
  state_topic: '${MOTION_GROUP}/${MOTION_CLIENT}/+/event/end'
  expire_after: !secret motion-end-expire-after
  force_update: !secret motion-end-force-update
  json_attributes:
    - device
    - camera
    - event
    - start
    - end
    - elapsed
    - date
    - timestamp
  value_template: >
    {% if value_json is defined %}True{% else %}False{% endif %}

## standard event count, ago, mean, status
- platform: template
  sensors:
    ## status
    motion_end_status:
      friendly_name: Movement 
      entity_id:
        - sensor.motion_event_end
        - sensor.motion_end_ago
      value_template: >-
        {% set device = state_attr('sensor.motion_event_end','device') %}
        {% set camera = state_attr('sensor.motion_event_end','camera') %}
        {% set elapsed = state_attr('sensor.motion_event_end','elapsed')|int %}
        {% set end = state_attr('sensor.motion_event_end','end')|int %}
        {% set ago = utcnow().timestamp()|int - end %}
        {% if elapsed > 0 %} {{ elapsed }} {% else %} zero {% endif %} second(s);
        {{ device -}}/{{- camera }};
        {{ ago }} second(s) ago

## timing
- platform: template
  sensors:
    motion_end_date:
      entity_id:
        - sensor.motion_event_end
      unit_of_measurement: seconds
      value_template: >-
        {% set date = state_attr('sensor.motion_event_end','date')|int %}
        {% if date  > 0 %} {{ date }} {%- else -%}null{%- endif -%}

# human readable
- platform: template
  sensors:
    motion_end_when:
      entity_id:
        - sensor.motion_end_date
      value_template: >
        {% set s = states('sensor.motion_end_date')|int %}
        {% if s > 0 %}
          {% set n = now().timestamp() %}
          {{ s|int|timestamp_custom("%a %b %d %I:%M:%S %p %Z") -}}; {{ (n|int-s)|int }} ago
        {% else %}never{% endif %}

# seconds ago
- platform: template
  sensors:
    motion_end_ago:
      friendly_name: End ago
      entity_id:
        - sensor.motion_end_date
        - sensor.time
      unit_of_measurement: seconds
      value_template: >
        {% set s = states('sensor.motion_end_date')|int %}
        {% if s > 0 %}
          {% set s = utcnow().timestamp()|int - s %}
          {% if s < 86400 %}{{ s }}{%- else -%}null{%- endif -%}
        {%- else -%}null{%- endif -%}

# seconds elapsed
- platform: template
  sensors:
    motion_end_elapsed:
      entity_id:
        - sensor.motion_event_end
      unit_of_measurement: seconds
      value_template: >
        {% if states.sensor.motion_event_end|lower != 'none'
              and state_attr('sensor.motion_event_end','elapsed')|lower != 'none' %}
          {{ states.sensor.motion_event_end.attributes.elapsed|int }}
        {% else %}null{% endif %}

- platform: template
  sensors:
    motion_end_counter:
      friendly_name: Total movements
      entity_id:
        - counter.motion_end_counter
      unit_of_measurement: count
      value_template: >
        {{ states('counter.motion_end_counter')|int }}

- platform: template
  sensors:
    motion_end_device:
      entity_id:
        - sensor.motion_event_end
      value_template: >
        {% if states.sensor.motion_event_end|lower != 'none'
              and state_attr('sensor.motion_event_end','device')|lower != 'none' %}
          {{ states.sensor.motion_event_end.attributes.device }}
        {% else %} null {% endif %}

- platform: template
  sensors:
    motion_end_camera:
      entity_id:
        - sensor.motion_event_end
      value_template: >
        {% if states.sensor.motion_event_end|lower != 'none'
              and state_attr('sensor.motion_event_end','camera')|lower != 'none' %}
          {{ states.sensor.motion_event_end.attributes.camera }}
        {% else %} null {% endif %}

- platform: template
  sensors:
    motion_end_image_count:
      entity_id:
        - sensor.motion_event_end
      unit_of_measurement: count
      value_template: >
        {% if states.sensor.motion_event_end|lower != 'none'
              and state_attr('sensor.motion_event_end','images')|lower != 'none' %}
          {{ states.sensor.motion_event_end.attributes.images | length }}
        {% else %} null {% endif %}

## snapshot
- platform: template
  sensors:
    motion_end_snapshot:
      entity_id:
        - counter.motion_end_counter
      value_template: >-
        {% set c = state_attr('sensor.motion_event_end','camera') %}
        {% if c is not none and c != 'unknown' %}
          {% set bu = states('sensor.motion_base_url') %}
          {% if bu is not none and bu != 'unknown' %}
            {{ bu + '/local/images/motion_end-' + c + '.jpg' }}
          {% else %}
            {{ states('sensor.motion_testsignal_picture') }}
          {% endif %}
        {% else %}
          {{ states('sensor.motion_noisesignal_picture') }}
        {% endif %}

## picture
- platform: template
  sensors:
    motion_end_picture:
      entity_id:
        - counter.motion_end_counter
      value_template: >-
        {% set ep = state_attr('camera.motion_event_end','entity_picture') %}
        {% if ep is not none and bu is not none and ep|lower != 'unknown' and ep|length > 0 %}
          {% set bu = states('sensor.motion_base_url') %}
          {% if bu is not none and bu|lower != 'unknown' %}
            {% set p = bu + ep %}
          {% else %}
            {% set p = states('sensor.motion_noisesignal_picture') %}
          {% endif %}
        {% endif %}
        {% if p is defined and p is not none and p|lower != 'unknown' and p|length > 0 %}
          {{ p }}
        {% else %}
          {{ states('sensor.motion_nosignal_picture') }}
        {% endif %}

