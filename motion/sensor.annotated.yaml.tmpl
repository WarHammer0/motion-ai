##
# event_annotated
##

- platform: mqtt
  name: motion_event_annotated
  state_topic: '${MOTION_GROUP}/${MOTION_CLIENT}/+/event/end/+'
  qos: 2
  expire_after: 1
  force_update: True
  json_attributes:
    - timestamp
    - date
    - time
    - count
    - event
    - info
    - detected
  value_template: >
    {% if value_json is defined %}True{% else %}False{% endif %}

## status
- platform: template
  sensors:
    motion_annotated_status:
      friendly_name: Annotated
      entity_id:
        - sensor.motion_annotated_when
        - sensor.motion_annotated_ago
      value_template: >-
        {% set elapsed = states('sensor.motion_annotated_elapsed')|int %}
        {% set count = states('sensor.motion_annotated_count')|int %}
        {% set device = states('sensor.motion_annotated_device') %}
        {% set entity_count = states('sensor.motion_annotated_entity_count')|int %}
        {% set camera = states('sensor.motion_annotated_camera') %}
        {% set entities = states('sensor.motion_annotated_list') %}
        {% set end = states('sensor.motion_annotated_date')|int %}
        {% set delay = states('sensor.motion_annotated_delay')|int %}
        {% set ago = states('sensor.motion_annotated_ago')|int %}
        {% if elapsed > 0 %}Duration: {{ elapsed }} {% else %}Zero{% endif %} second(s);
        {% if count > 0 %}{{ count }} entities: {{ entities -}};{% else %}nothing{% endif -%};
        {% if entity_count > 0 %}{{ entity_count }}{% else %}Zero{% endif %}{{ states('sensor.motion_detect_entity') -}}(s)
        delay: {{ delay -}};
        from: {{ device -}}/{{- camera -}};
        {{ ago }} second(s) ago

## count
- platform: template
  sensors:
    motion_annotated_count:
      friendly_name: Annotated count
      entity_id:
        - sensor.motion_event_annotated
      unit_of_measurement: entities
      value_template: >
        {% set n = state_attr('sensor.motion_event_annotated','count') %}
        {% if n is not none and n|lower != 'unknown' %}
          {{ n|int }}
        {% else %}null{% endif %}

## entity_count_loop
- platform: template
