##
# event_annotated
##

- platform: mqtt
  name: motion_event_annotated
  state_topic: '${MOTION_GROUP}/${MOTION_CLIENT}/+/event/end/+'
  qos: 2
  expire_after: 60
  force_update: True
  json_attributes:
    - timestamp
    - date
    - time
    - count
    - event
    - info
    - detected
  value_template: >
    {% if value_json is defined %}True{% else %}False{% endif %}

## status
- platform: template
  sensors:
    motion_annotated_status:
      friendly_name: Annotated
      entity_id:
        - sensor.motion_annotated_when
        - sensor.motion_annotated_device
        - sensor.motion_annotated_camera
        - sensor.motion_annotated_elapsed
        - sensor.motion_annotated_entity_count
        - sensor.motion_annotated_entities
        - sensor.motion_annotated_ago
      value_template: >-
        {% set elapsed = states('sensor.motion_annotated_elapsed')|int %}
        {% set count = states('sensor.motion_annotated_count')|int %}
        {% set device = states('sensor.motion_annotated_device') %}
        {% set entity_count = states('sensor.motion_annotated_count_entity')|int %}
        {% set camera = states('sensor.motion_annotated_camera') %}
        {% set entities = states('sensor.motion_annotated_list') %}
        {% set delay = states('sensor.motion_annotated_delay')|int %}
        {% set when = states('sensor.motion_annotated_when') %}
        {% set ago = states('sensor.motion_annotated_ago')|int %}
        {% if elapsed > 0 %}Duration: {{ elapsed }} seconds{% else %}None{% endif %};
        {% if count > 0 %}{{ count }} entities: {{ entities -}}{% else %}nothing{% endif -%};
        {% if entity_count > 0 %}{{ entity_count }} {{ states('sensor.motion_detect_entity') -}}(s){% else %}none{% endif %};
        from: {{ device -}}/{{- camera -}};
        at: {{ when -}};
        delay: {{ delay -}};
        {{ ago }} second(s) ago

