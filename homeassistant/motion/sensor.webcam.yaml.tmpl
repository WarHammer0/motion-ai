          {% set delay = n - end %}
          FACE: {{ count }} {{ what }};
          from {{ device -}}/{{- camera -}}/{{- event -}};
          at {{ when }};
          ago: {{ ago }};
          delay: {{ delay }};
          duration: {{ elapsed }};
          counter: {{ states('counter.motion_face_detected_counter_${MOTION_CAMERA}') -}}/{{- states('sensor.motion_face_detected_counter_${MOTION_CAMERA}') -}}
        {% else %}
