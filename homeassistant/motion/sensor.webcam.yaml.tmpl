        - counter.motion_face_detected_counter_${MOTION_CAMERA}
      value_template: >-
        {% set e = state_attr('sensor.motion_event_face_${MOTION_CAMERA}','event') %}
        {% if e is not none and e|lower != 'unavailable' and e|lower != 'unknown' and e != 'null' %}
          {% set n = utcnow().timestamp()|int %}
          {% set end = e.end|int %}
          {% set ago = n - end %}
          {% set event = e.event %}
          {% set device = e.device %}
          {% set camera = e.camera %}
          {% set elapsed = e.elapsed|int %}
          {% set what = state_attr('sensor.motion_event_face_${MOTION_CAMERA}','detected')|list %}
